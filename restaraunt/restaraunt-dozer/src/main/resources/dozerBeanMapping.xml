<?xml version="1.0" encoding="UTF-8"?>
<mappings xmlns="http://dozer.sourceforge.net" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://dozer.sourceforge.net http://dozer.sourceforge.net/schema/beanmapping.xsd">
	
	<configuration>
		<custom-converters>
			<converter type="com.dozer.converter.VirtualAccountConverter">
				<class-a>java.lang.Integer</class-a>
				<class-b>com.callcomm.eserve.persistence.entity.VirtualAccount</class-b>
			</converter>
			<converter type="com.dozer.converter.UserConverter">
				<class-a>java.lang.String</class-a>
				<class-b>com.callcomm.eserve.persistence.entity.Appuser</class-b>
			</converter>
      		<converter type="com.dozer.converter.CompanyConverter">
      			<class-a>java.lang.Integer</class-a>
				<class-b>com.callcomm.eserve.persistence.entity.Company</class-b>
      		</converter>
      		<converter type="com.dozer.converter.TimestampToStringConverter">
				<class-a>java.sql.Timestamp</class-a>
				<class-b>java.lang.String</class-b>
			</converter>
			<converter type="com.dozer.converter.SqlDateToStringConverter">
				<class-a>java.sql.Date</class-a>
				<class-b>java.lang.String</class-b>
			</converter>
			<converter type="com.dozer.converter.StringToTimestampConverter">
				<class-a>java.lang.String</class-a>
				<class-b>java.sql.Timestamp</class-b>
			</converter>
			<converter type="com.dozer.converter.CommonIdConverter">
				<class-a>java.lang.String</class-a>
				<class-b>java.lang.Integer</class-b>
			</converter>
			<converter type="com.dozer.converter.EntityByteArrayToSid">
				<class-a>com.callcomm.eserve.persistence.entity.AbsBaseEntity</class-a>
				<class-b>java.lang.String</class-b>
			</converter>
			<converter type="com.dozer.converter.EnumToStringConverter">
				 <class-a>java.lang.Enum</class-a>
            	<class-b>java.lang.String</class-b>
			</converter>
      		<!-- <converter type="com.dozer.converter.DisplayNameConverter">
      			<class-a>java.lang.String</class-a>
				<class-b>java.lang.String</class-b>
      		</converter> -->
		</custom-converters>
	</configuration>
	
