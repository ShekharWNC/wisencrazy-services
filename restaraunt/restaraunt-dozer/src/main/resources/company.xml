<?xml version="1.0" encoding="UTF-8"?>
<mappings xmlns="http://dozer.sourceforge.net"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://dozer.sourceforge.net http://dozer.sourceforge.net/schema/beanmapping.xsd">
      <mapping wildcard="false" map-id="companybasic">
      	<class-a>com.callcomm.eserve.persistence.entity.Company</class-a>
      	<class-b>com.dto.CompanyDTO</class-b>
      	<field>
      		<a>id</a>
      		<b>id</b>
      	</field>
      	<field>
      		<a>name</a>
      		<b>name</b>
      	</field>
      </mapping>
      
        <mapping  map-id="companybasicinfo">
      	<class-a>com.callcomm.eserve.persistence.entity.Company</class-a>
      	<class-b>com.dto.CompanyBasicDTO</class-b>
      	<field-exclude>
      		<a>createdBy</a>
      		<b>createdBy</b>
      	</field-exclude>
      	<field-exclude>
      		<a>updatedBy</a>
      		<b>updatedBy</b>
      	</field-exclude>
      </mapping>
</mappings>
