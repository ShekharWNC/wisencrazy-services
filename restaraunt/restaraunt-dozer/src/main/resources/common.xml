<?xml version="1.0" encoding="UTF-8"?>
<mappings xmlns="http://dozer.sourceforge.net"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://dozer.sourceforge.net http://dozer.sourceforge.net/schema/beanmapping.xsd">
      <mapping type="one-way">
      	<class-a>com.dto.AbsCommonDTO</class-a>
      	<class-b>com.callcomm.eserve.persistence.entity.AbsBaseEntity</class-b>
      	<field>
      		<a>sid</a>
      		<b set-method="setIdBySid">id</b>
      	</field>
      	
      	<field>
      		<a get-method="hexStringToByteArray">sid</a>
      		<b>sid</b>
      	</field>
      </mapping>
     
      
      <mapping type="one-way">
      	<class-a>com.callcomm.eserve.persistence.entity.AbsBaseEntity</class-a>
      	<class-b>com.dto.AbsCommonDTO</class-b>
      	<field-exclude>
      		<a>id</a>
      		<b>id</b>
      	</field-exclude>
      	<field>
      		<a get-method="bytesToHexString">sid</a>
      		<b>sid</b>
      	</field>
      </mapping>
      
      <mapping type="one-way">
      	<class-a>com.callcomm.eserve.persistence.entity.AbsBaseEntity</class-a>
      	<class-b>com.callcomm.eserve.persistence.entity.AbsCompositeEntity</class-b>
      	<field>
      		<a get-method="bytesToHexString">sid</a>
      		<b>sid</b>
      	</field>
      </mapping>
      
      <mapping type="one-way">
      	<class-a>com.dto.AbsCommonDTO</class-a>
      	<class-b>com.callcomm.eserve.persistence.entity.AbsCompositeEntity</class-b>
	      	<field>
	      		<a get-method="hexStringToByteArray">sid</a>
	      		<b>sid</b>
	      	</field>
      </mapping>
      
        <mapping type="one-way">
      	<class-a>com.callcomm.eserve.persistence.entity.AbsBaseEntity</class-a>
      	<class-b>com.callcomm.eserve.persistence.to.AbsCommonTO</class-b>
        <field>
      		<a get-method="bytesToHexString">sid</a>
      		<b>sid</b>
      	</field>
      </mapping>    
      
      <mapping type="one-way">
      	<class-a>com.callcomm.eserve.persistence.entity.AbsCompositeEntity</class-a>
      	<class-b>com.dto.AbsCommonDTO</class-b>
        <field>
      		<a get-method="bytesToHexString">sid</a>
      		<b>sid</b>
      	</field>
      </mapping>  
  
      <mapping type="one-way" map-id="withid">
      	<class-a>com.callcomm.eserve.persistence.entity.AbsBaseEntity</class-a>
      	<class-b>com.dto.AbsCommonDTO</class-b>
      	<field>
      		<a>id</a>
      		<b>id</b>
      	</field>
      	<field>
      		<a get-method="bytesToHexString">sid</a>
      		<b>sid</b>
      	</field>
      </mapping>
      
</mappings>
